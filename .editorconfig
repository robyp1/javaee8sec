root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,css}]
indent_style = space
indent_size = 2
continuation_indent_size = 4

[*.{java,xml,html,xhtml,sql}]
indent_style = space
indent_size = 4
continuation_indent_size = 8